{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2022",
		"lib": [
			"ES2022"
		],
		"esModuleInterop": true,
        "isolatedModules": true,
        "moduleDetection": "force",
        "rootDir": "src",
        "outDir": "out",
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "incremental": true,
        "sourceMap": true
	},
	"exclude": [
		"node_modules",
		".vscode-test",
		"ui",
		"tsup.config.ts",
		"knip.ts"
	],
}
